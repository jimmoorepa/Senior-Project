<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <meta content="utf-8" http-equiv="encoding">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    <title>Food Form</title>
</head>

<body>
    <div class="container border border-secondary" id="productContainer">
        <br>
        <form id="foodProductForm" action="/postForm" method="POST">
            <div class="form-group row">
                <label for="inputProductName" class="col-sm-2 col-form-label">Product name:</label>
                <div class="col">
                    <input type="text" class="form-control" id="inputProductName" placeholder="Ex. Redbull">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputFoodType" class="col-sm-2 col-form-label">Product type:</label>
                <div class="col">
                    <select id="inputFoodType" class="form-control">
                        <option selected>Choose a product type</option>
                        <option>Baby food</option>
                        <option>Baked goods</option>
                        <option>Cakes</option>
                        <option>Biscuits</option>
                        <option>Crackers</option>
                        <option>Beverages</option>
                        <option>Breakfast foods</option>
                        <option>Canned foods</option>
                        <option>Chips, crisps, corn snacks, nuts and seeds</option>
                        <option>Condiments</option>
                        <option>Confectionery</option>
                        <option>Dairy products</option>
                        <option>Cheeses and cheese foods</option>
                        <option>Dips</option>
                        <option>Egg products</option>
                        <option>Frozen foods</option>
                        <option>Ice cream and frozen desserts</option>
                        <option>Meats</option>
                        <option>Oils, butters and fat spreads</option>
                        <option>Pickles and vinegar</option>
                        <option>Sauces</option>
                        <option>Soy foods</option>
                        <option>Spreads, jams and honeys</option>
                        <option>Prepared/ready-made meals and foods</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputProductPrice" class="col-sm-2 col-form-label">Product price:</label>
                <div class="col">
                    <input type="text" class="form-control" id="inputZip">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputProductDescription" class="col-sm-2 col-form-label">Describe your product:</label>
                <div class="col">
                    <textarea class="form-control" id="inputProductDescription" rows="3"
                        placeholder="Ex. This rare tea comes from a remote mountain region of China"></textarea>
                </div>
            </div>
            {{!-- <div class="form-group row">
                <label for="productImage" class="col-sm-2 col-form-label">Upload a picure of your product:</label>
                <div class="col">
                    <input type="file" class="form-control-file" id="productImage">
                </div>
            </div> --}}
            <button type="submit" class="float-right">Post</button>
        </form>
        <br>
    </div>

    <script>
        $(document).ready(function () {

            // process the form
            $('foodProductForm').submit(function (event) {

                // get the form data
                // there are many ways to get this data using jQuery (you can use the class or id also)
                var formData = {
                    'inputProductName': $('input[id=inputProductName]').val(),
                    'inputProductType': $('input[id=inputProductType]').val(),
                    'inputProductPrice': $('input[id=inputProductPrice]').val(),
                    'inputProductDescription': $('id[name=inputProductDescription]').val()

                };

                // process the form
                $.ajax({
                    type: 'POST', // define the type of HTTP verb we want to use (POST for our form)
                    url: '/postForm', // the url where we want to POST
                    data: formData, // our data object
                    dataType: 'json', // what type of data do we expect back from the server
                })
                    .done(function (data) {

                        console.log(data);
                    });
            });

        });
    </script>
</body>


</html>